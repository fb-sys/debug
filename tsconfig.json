{
  "include": ["src/**/*.ts"],
  "exclude": ["node_modules", "build", "src/**/*.spec.ts"],
  "compilerOptions": {
    "target": "ES6",
    "module": "commonjs",
    "outDir": "build",
    "sourceMap": true,
    "declaration": true,
    "newLine": "lf",
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "moduleResolution": "Node",
    "strict": true,
    "alwaysStrict": true,
    "skipLibCheck": false
  }
}
